<div class="container-fluid pt-5 mt-1">
    <div class="row justify-content-center p-3" id="editReviewHeading">
        <div class="col-12">
            <h2 class="modal-title">Edit Review</h2>
        </div>
    </div>
    <div class="modal-dialog mt-5">
        <div class="modal-content">
            <div class="modal-body p-3">

                <form action="/review/edit/{{review._id}}" method="POST" id= "editReview">
                <div class="row mr-3 ml-3">
                    <h6 class="col-4">Heading</h6>
                </div>
                <div class="form-group row mr-3 ml-3">
                    <input class="form-control col-12" type="text" name="review.reviewHeading" value="{{review.review.reviewHeading}}">
                </div>
                <div class="row mr-3 ml-3">
                    <h6 class="col-4">Review</h6>
                </div>
                <div class="form-group row mr-3 ml-3">
                    <input type="text" class="form-control" name="review.description" value="{{review.review.description}}">
                </div>
                <div class="row mr-3 ml-3">
                    <h6 class="col-4" id="rating">Rating</h6>
                </div>
                <div class="form-group row mr-3 ml-3 justify-content-center">
                    <div class="form-check form-check-inline col-2">
                        <input class="form-check-input" type="radio" name="review.rating" id="exampleRadios1" value="1" checked>
                        <label class="form-check-label" for="exampleRadios1">
                            <h6>&nbsp;1</h6>
                        </label>
                    </div>
                    <div class="form-check form-check-inline col-2">
                        <input class="form-check-input" type="radio" name="review.rating" id="exampleRadios2" value="2">
                        <label class="form-check-label" for="exampleRadios2">
                            <h6>&nbsp;2</h6>
                        </label>
                    </div>
                    <div class="form-check form-check-inline col-2">
                        <input class="form-check-input" type="radio" name="review.rating" id="exampleRadios3" value="3">
                        <label class="form-check-label" for="exampleRadios3">
                            <h6>&nbsp;3</h6>
                        </label>
                    </div>
                    <div class="form-check form-check-inline col-2">
                        <input class="form-check-input" type="radio" name="review.rating" id="exampleRadios3" value="4">
                        <label class="form-check-label" for="exampleRadios3">
                            <h6>&nbsp;4</h6>
                        </label>
                    </div>
                    <div class="form-check form-check-inline col-2">
                        <input class="form-check-input" type="radio" name="review.rating" id="exampleRadios3" value="5">
                        <label class="form-check-label" for="exampleRadios3">
                            <h6>&nbsp;5</h6>
                        </label>
                    </div>
                </div>
                <div class="row justify-content-center mr-3 ml-3">
                    <button class="btn btn-primary col-3" type="submit">Submit</button>
                </div>
                </form>

            </div>
        </div>
    </div>
</div>
