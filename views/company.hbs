<div>
<h1>{{company.companyName}}</h1>
<p>{{company.owns}}</p>
<p>{{company.department}}</p>
<p>{{company.website}}</p>
<p>{{company.numberOfEmployee}}</p>
<p>{{company.country}}</p>
{{#if AverageRating}}
<p>Average rating:{{AverageRating}}/5</p>
{{else}}
<p>No rating Added</p>
{{/if}}
{{#if reviews}}
<div class="row">
    {{#each reviews}}
    <div class="card col-12">
    <h5>{{this.review.reviewHeading}}<span></h5>
    <p>Rated :{{this.review.reviewRating}}/5</p>
    <p>{{this.review.description}}</p>
    <p class = "text-muted">{{this.review.datePublished}}</p>
    </div>
    {{/each}}
</div>
 {{else}}
 <h5>No review Added</h5>
   {{/if}}
    
<a href="/review/addReview/{{companyId}}" class="btn btn-primary">add review</a>
</div>